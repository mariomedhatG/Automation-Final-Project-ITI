<?xml version="1.0" encoding="UTF-8"?>
<suite name="E-Commerce Test Suite" parallel="classes" thread-count="3" verbose="1">

    <!-- Listeners for enhanced reporting and retry mechanism -->
    <listeners>
        <listener class-name="mariomedhatGo.listeners.TestListener"/>
        <listener class-name="mariomedhatGo.listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <!-- Smoke Test Suite - Critical functionality -->
    <test name="Smoke Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="mariomedhatGo.tests.RegistrationTests">
                <methods>
                    <include name="testSuccessfulRegistration"/>
                </methods>
            </class>
            <class name="mariomedhatGo.tests.ProductTests">
                <methods>
                    <include name="testVerifyAllProductsPage"/>
                </methods>
            </class>
            <class name="mariomedhatGo.tests.E2e">
                <methods>
                    <include name="E2eValidScenario"/>
                    <include name="testMultipleProductsCheckout"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Sanity Test Suite - Basic functionality verification -->
    <test name="Sanity Tests" preserve-order="false">
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <class name="mariomedhatGo.tests.E2e"/>
            <class name="mariomedhatGo.tests.RegistrationTests"/>
            <class name="mariomedhatGo.tests.ProductTests"/>
            <class name="mariomedhatGo.tests.CheckoutTests"/>
            <class name="mariomedhatGo.tests.SearchTests"/>
            <class name="mariomedhatGo.tests.NavigationTests"/>
        </classes>
    </test>

</suite>